<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegistrosActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lyBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/btnBackButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:background="@android:color/white"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/MENU_REGISTROS"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lyLinear0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyBackButton">
        <Button
            android:id="@+id/btnNuevoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NUEVO_REGISTRO"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>
    <ListView
        android:id="@+id/listViewReg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyLinear0"
        android:layout_weight="1"
        android:textColor="@android:color/black" />
</RelativeLayout>
